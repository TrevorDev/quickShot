{
    "externalTranspiler": "babel",
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalAsyncFunctions": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "app.ts",
        "libs/appFactory.ts",
        "libs/config.ts",
        "libs/materials.ts",
        "libs/stageFactory.ts",
        "objects/character.ts",
        "objects/controller.ts",
        "objects/stage.ts",
        "public/ts/index/logic.ts",
        "typings/body-parser/body-parser.d.ts",
        "typings/browserify/browserify.d.ts",
        "typings/express-session/express-session.d.ts",
        "typings/express/express.d.ts",
        "typings/jade/jade.d.ts",
        "typings/mime/mime.d.ts",
        "typings/node/node.d.ts",
        "typings/serve-static/serve-static.d.ts",
        "typings/threejs/three.d.ts",
        "typings/tsd.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
